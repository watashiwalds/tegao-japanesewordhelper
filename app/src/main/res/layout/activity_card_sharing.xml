<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.learning.cardsharing.CardSharingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/include_label_header_bar"
            android:id="@+id/lo_headerBar_icl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/lo_headerBar_icl"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Theme.Tegao.Screen.PaddingBorder"
            >

            <AutoCompleteTextView
                android:id="@+id/sourceName_txt"
                style="@style/Theme.Tegao.Label.Large"
                android:paddingTop="@dimen/padding_tiny"
                android:paddingBottom="@dimen/padding_midDecent"
                app:drawableEndCompat="@drawable/material3_round_chevron_down_24px"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:maxLines="1"
                tools:text="Source's Name"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/packList_rcy"
                style="@style/Theme.Tegao.ScrollableViewFadeEdge"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/sourceName_txt"
                app:layout_constraintBottom_toTopOf="@id/addSource_btn"

                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"

                tools:listitem="@layout/item_carddeck_quickinfo"
                />

            <Button
                android:id="@+id/addSource_btn"
                style="@style/Theme.Tegao.LabelButton.Neutral"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_normal"
                android:layout_marginBottom="@dimen/padding_normal"
                android:layout_marginEnd="@dimen/padding_tiny"
                android:text="@string/card_sharing_addSource_label"
                android:visibility="invisible"
                android:clickable="false"
                app:icon="@drawable/ftc_round_globe_128"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fileImport_btn"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/fileImport_btn"
                style="@style/Theme.Tegao.LabelButton.Neutral"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_normal"
                android:layout_marginBottom="@dimen/padding_normal"
                android:layout_marginStart="@dimen/padding_tiny"
                android:text="@string/card_sharing_fileImport_label"
                app:icon="@drawable/ftc_round_file_128"
                app:layout_constraintStart_toEndOf="@id/addSource_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>