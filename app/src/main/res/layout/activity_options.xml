<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.options.OptionsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/include_label_header_bar"
            android:id="@+id/lo_headerBar_icl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>

        <ScrollView
            android:paddingHorizontal="@dimen/padding_normal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/lo_headerBar_icl"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/Theme.Tegao.Screen.PaddingBorder"
                    android:background="@drawable/neutral_stroke_background"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/accountIO_btn"
                        android:orientation="vertical"
                        android:layout_marginEnd="@dimen/padding_small"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:id="@+id/lo_accountType_txt"
                            style="@style/Theme.Tegao.Label.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            tools:text="Account Type" />

                        <TextView
                            android:id="@+id/lo_accountName_txt"
                            style="@style/Theme.Tegao.Label.LargeMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Unique Name Account"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/accountIO_btn"
                        style="@style/Theme.Tegao.LabelButton.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/padding_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Sign in /\nLog out" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/optionsList_rcy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_small"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    tools:listitem="@layout/item_list_navigation"
                    tools:itemCount="2"
                    />

            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>