<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="headerBarInfo"
            type="com.tegaoteam.application.tegao.ui.component.HeaderBarInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="@dimen/img_icon_large"
            android:layout_height="@dimen/img_icon_large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ftc_round_arrow_left_128"
            android:scaleType="fitCenter"
            android:background="?android:selectableItemBackground"
            android:padding="@dimen/padding_tiny"
            android:onClick="@{() -> headerBarInfo.backOnClickListener.invoke()}"
            />

        <TextView
            style="@style/Theme.Tegao.Label.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/back_btn"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{headerBarInfo.label}"

            tools:text="Lựa chọn là của bạn thôi" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
