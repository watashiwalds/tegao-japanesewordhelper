<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="listNavInfo"
            type="com.tegaoteam.application.tegao.ui.component.generics.ListNavigationItemInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/padding_normal">

        <ImageView
            android:id="@+id/icon"
            style="@style/Theme.Tegao.ImageIcon.Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/label"
            android:layout_marginEnd="@dimen/padding_normal"
            app:layout_constraintTop_toTopOf="@id/label"
            app:layout_constraintBottom_toBottomOf="parent"

            app:srcResId="@{listNavInfo.iconResId}"

            tools:src="@drawable/ftc_round_search_128"
            />

        <TextView
            android:id="@+id/label"
            style="@style/Theme.Tegao.Label.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:textResId="@{listNavInfo.labelResId}"

            tools:text="Tìm kiếm"
            />

        <TextView
            android:id="@+id/detail"
            style="@style/Theme.Tegao.Label.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@id/label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label"
            app:layout_constraintBottom_toBottomOf="parent"

            app:textResId="@{listNavInfo.detailResId}"

            android:ellipsize="end"
            tools:text="Thanh tìm kiếm, lịch sử tìm kiếm, tự động điền"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
