<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="hasRecognizedText"
            type="androidx.lifecycle.LiveData&lt;Boolean&gt;" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/Theme.Tegao.Screen.PaddingBorder"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/selectImage_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.Tegao.LabelButton.Primary"
                android:text="@string/imageocr_selectAnImage_title"
                />
            <ImageView style="@style/Theme.Tegao.Divider.Vertical"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagePreview_img"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/Theme.Tegao.MaterialRequire.ShapeableImageViewRoundedBorderOverlay"
                tools:src="@drawable/ic_launcher_background"
                />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="@dimen/padding_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            >
            <TextView
                android:id="@+id/recognizedText_txt"
                style="@style/Theme.Tegao.ContentText.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:hint="@string/imageocr_recognizing_hint"
                />
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/usingAll_btn"
            style="@style/Theme.Tegao.LabelButton.Secondary"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:layout_gravity="end"
            android:text="@string/imageocr_usingAll_title"
            app:toggleVisibilityLiveData="@{hasRecognizedText}"
            />

    </LinearLayout>

</layout>