<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Theme.Tegao.Screen.PaddingBorder"
        tools:context=".ui.learning.cardcreate.fragment.CardCreateSetGroupFragment">

        <TextView
            style="@style/Theme.Tegao.Label.Large"
            android:id="@+id/lo_fragment_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/card_create_what_group" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lo_selectable_group_list_rcy"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_marginTop="@dimen/padding_normal"

            app:layout_constraintTop_toBottomOf="@id/lo_fragment_title_text"
            app:layout_constraintBottom_toTopOf="@id/qab_newGroup_btn"

            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/item_chip_checkbox_text"
            tools:itemCount="4"
            />

        <TextView
            style="@style/Theme.Tegao.ContentText.TitleSecondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"

            app:layout_constraintBottom_toBottomOf="@id/qab_newGroup_btn"
            app:layout_constraintTop_toTopOf="@id/qab_newGroup_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/qab_newGroup_btn"

            android:text="@string/card_create_qab_add_group"
            />

        <ImageButton
            android:id="@+id/qab_newGroup_btn"
            style="@style/Theme.Tegao.IconButton"
            android:layout_width="@dimen/img_icon_large"
            android:layout_height="@dimen/img_icon_large"
            android:background="@drawable/neutral_stroke_background"
            android:padding="@dimen/padding_normal"
            android:layout_margin="@dimen/padding_normal"
            android:src="@drawable/ftc_round_plus_128"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

