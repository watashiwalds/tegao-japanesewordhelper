<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Theme.Tegao.Screen.PaddingBorder"
        tools:context=".ui.learning.cardcreate.fragment.CardCreateSetGroupFragment">

        <TextView
            style="@style/Theme.Tegao.Label.Large"
            android:id="@+id/lo_fragment_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"

            tools:text="Fragment header line goes here" />

        <ScrollView
            android:id="@+id/lo_input_field_list_lst"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/next_btn"
            app:layout_constraintTop_toBottomOf="@+id/lo_fragment_title_text" />

        <Button
            android:id="@+id/next_btn"
            style="@style/Theme.Tegao.LabelButton.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/img_icon_large"
            android:layout_margin="@dimen/padding_normal"
            android:text="@string/phrase_next"
            android:foreground="?android:selectableItemBackground"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/placeholder_qab_btn"
            style="@style/Theme.Tegao.IconButton"
            android:layout_width="@dimen/img_icon_large"
            android:layout_height="@dimen/img_icon_large"
            android:background="@drawable/neutral_stroke_background"
            android:padding="@dimen/padding_normal"
            android:layout_margin="@dimen/padding_normal"
            android:visibility="gone"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

