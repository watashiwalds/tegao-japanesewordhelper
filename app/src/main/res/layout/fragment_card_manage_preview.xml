<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/view_learning_card"
            android:id="@+id/view_learningCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="9:15"
            />

        <Button
            android:id="@+id/flickCard_btn"
            style="@style/Theme.Tegao.LabelButton.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_learningCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/resetCardState_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/card_manage_preview_flickCard"
            />

        <Button
            android:id="@+id/resetCardState_btn"
            style="@style/Theme.Tegao.LabelButton.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_learningCard"
            app:layout_constraintStart_toEndOf="@id/flickCard_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cueEnabled="@{false}"
            android:text="@string/card_manage_preview_resetCardState"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
