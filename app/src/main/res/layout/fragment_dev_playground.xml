<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    style="@style/Theme.Tegao.Screen.PaddingBorder"

    tools:context=".ui.setting.devmode.DevPlaygroundFragment">

    <FrameLayout
        android:id="@+id/testview"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tegaoteam.application.tegao.ui.component.handwriting.WritingView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_normal"
        app:layout_constraintTop_toBottomOf="@id/testview"
        />

</androidx.constraintlayout.widget.ConstraintLayout>