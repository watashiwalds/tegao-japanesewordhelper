<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.learning.cardlearn.fragment.LearningSessionConfigureFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include layout="@layout/include_label_header_bar"
            android:id="@+id/lo_headerBar_icl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ScrollView
            style="@style/Theme.Tegao.ScrollableViewFadeEdge"
            android:padding="@dimen/padding_normal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/lo_headerBar_icl"
            app:layout_constraintBottom_toTopOf="@id/startLearning_btn"
            app:layout_constraintStart_toStartOf="parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    style="@style/Theme.Tegao.Label.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:text="@string/card_learn_config_groups"
                    />
                <TextView
                    style="@style/Theme.Tegao.Label.NormalSlim"
                    android:id="@+id/learningCardGroup_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_normal"
                    android:layout_marginBottom="@dimen/padding_normal"
                    />
                <TextView
                    style="@style/Theme.Tegao.Label.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:text="@string/card_learn_config_cardsLimit"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding_normal"
                    >
                    <ImageButton
                        android:id="@+id/maxNewCards_btn"
                        style="@style/Theme.Tegao.IconButton"
                        android:background="@drawable/neutral_stroke_background"
                        android:layout_width="@dimen/img_icon_big"
                        android:layout_height="@dimen/img_icon_big"
                        android:padding="@dimen/padding_small"
                        android:src="@drawable/ftc_round_maximum_128"
                        />
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/newCardCap_edt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_tiny"
                        android:ems="4"
                        android:inputType="number"
                        android:backgroundTint="@color/neutral"
                        android:enabled="false"
                        android:hint="@string/card_learn_config_newCardsCap_hint"
                        />
                    <ImageButton
                        android:id="@+id/maxDueCards_btn"
                        style="@style/Theme.Tegao.IconButton"
                        android:background="@drawable/neutral_stroke_background"
                        android:layout_width="@dimen/img_icon_big"
                        android:layout_height="@dimen/img_icon_big"
                        android:padding="@dimen/padding_small"
                        android:src="@drawable/ftc_round_maximum_128"
                        android:layout_marginStart="@dimen/padding_normal"
                        />
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/dueCardCap_edt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_tiny"
                        android:ems="4"
                        android:inputType="number"
                        android:backgroundTint="@color/neutral"
                        android:enabled="false"
                        android:hint="@string/card_learn_config_dueCardsCap_hint"
                        />
                </LinearLayout>
<!--                TODO: Re-enable Options list if have time to develop-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:text="@string/card_learn_config_options_label"

                    android:visibility="gone"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/lo_noRatingOption_cst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/padding_normal"

                    android:visibility="gone"
                    >
                    <TextView
                        style="@style/Theme.Tegao.Label.Normal"
                        android:id="@+id/lo_noRatingTitle_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/padding_small"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/noRatingMode_swt"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/lo_noRatingDesc_txt"
                        android:text="@string/card_learn_config_options_noRatingMode_title"
                        />
                    <TextView
                        style="@style/Theme.Tegao.Label.Small"
                        android:id="@+id/lo_noRatingDesc_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/padding_small"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/noRatingMode_swt"
                        app:layout_constraintTop_toBottomOf="@id/lo_noRatingTitle_txt"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/card_learn_config_options_noRatingMode_desc"
                        />
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/noRatingMode_swt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
        <Button
            style="@style/Theme.Tegao.LabelButton.Secondary"
            android:id="@+id/startLearning_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/padding_normal"
            android:text="@string/card_learn_config_submit_startLearning"
            app:cueEnabled="@{false}"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>