<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".ui.homescreen.lookup.LookupFragment">

    <data>
        <variable
            name="viewModel"
            type="com.tegaoteam.application.tegao.ui.homescreen.lookup.LookupFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Theme.Tegao.Screen">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lo_searchBar_cst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_thick_stroke_background"
            android:padding="@dimen/padding_large"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{() -> viewModel.startNavigateToLookup()}">

            <TextView
                android:id="@+id/dl_searchKeywordInput_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/putJPhere_hint"
                android:textColor="@color/neutral"
                app:layout_constraintEnd_toStartOf="@+id/searchStart_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/searchStart_btn"
                style="@style/Theme.Tegao.ImageButton.HasPadding"
                android:layout_marginEnd="@dimen/padding_small"
                android:src="@drawable/ftc_round_search_128"
                app:layout_constraintEnd_toStartOf="@+id/inputHandwriting_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/inputHandwriting_btn"
                style="@style/Theme.Tegao.ImageButton"
                android:src="@drawable/ftc_round_handwriting_128"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lo_searchType_cst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            app:layout_constraintTop_toBottomOf="@id/lo_searchBar_cst">

            <Button
                android:id="@+id/stringHistory_btn"
                style="@style/Theme.Tegao.TextButton.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_tiny"
                android:text="@string/title_words"
                app:icon="@drawable/ftc_bold_char_a_128"
                app:layout_constraintEnd_toStartOf="@id/kanjiHistory_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/kanjiHistory_btn"
                style="@style/Theme.Tegao.TextButton.Neutral"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_tiny"
                android:text="@string/title_kanji"
                app:icon="@drawable/ftc_bold_jp_char_go_128"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/stringHistory_btn"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/lo_title_history_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:drawablePadding="@dimen/padding_small"
            android:text="@string/title_search_recently"
            android:textAlignment="center"
            app:drawableStartCompat="@drawable/ftc_round_history_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lo_searchType_cst" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_list_rcy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/lo_title_history_txt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/padding_small" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>