<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.homescreen.learning.LearningDashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Theme.Tegao.Screen.PaddingBorder"
        >

        <LinearLayout
            android:id="@+id/lo_dueCardCount_lnr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_solid_background"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal"
            android:paddingBottom="@dimen/padding_small"
            android:layout_marginEnd="@dimen/padding_tiny"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lo_streakCount_lnr"
            >
            <TextView
                style="@style/Theme.Tegao.Label.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/const_white"
                android:maxLines="1"
                android:text="@string/learning_dashboard_duecard_title"
                />
            <TextView
                android:id="@+id/dueCardCount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.Tegao.RemoveDefaultTextPad"
                android:textColor="@color/const_white"
                android:fontFamily="@font/calsans_regular"
                android:maxLines="1"
                android:textSize="48sp"
                android:text="_"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lo_streakCount_lnr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_solid_background"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal"
            android:paddingBottom="@dimen/padding_small"
            android:layout_marginStart="@dimen/padding_tiny"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/lo_dueCardCount_lnr"
            >
            <TextView
                style="@style/Theme.Tegao.Label.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/const_white"
                android:maxLines="1"
                android:text="@string/learning_dashboard_streak_title"
                />
            <TextView
                android:id="@+id/streakCount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Theme.Tegao.RemoveDefaultTextPad"
                android:textColor="@color/const_white"
                android:fontFamily="@font/calsans_regular"
                android:maxLines="1"
                android:textSize="48sp"
                android:text="_"
                />
        </LinearLayout>

        <Button
            android:id="@+id/learnAll_btn"
            style="@style/Theme.Tegao.LabelButton.Secondary"
            android:foreground="?android:selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/learning_startAll_title"
            app:icon="@drawable/ftc_round_play_128"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lo_dueCardCount_lnr"
            android:layout_marginTop="@dimen/padding_small"
            />

        <FrameLayout
            android:id="@+id/lo_cardGroupListHeaderBar_frm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            app:layout_constraintTop_toBottomOf="@id/learnAll_btn"
            app:layout_constraintStart_toStartOf="parent"
            >
            
            <TextView
                style="@style/Theme.Tegao.Label.Normal"
                android:id="@+id/cardGroupCounter_txt"
                android:paddingStart="@dimen/padding_tiny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/img_icon_big"
                android:layout_gravity="center_vertical"
                android:text="@string/phrase_processing"
                />

            <ImageButton
                style="@style/Theme.Tegao.ImageIcon.Label"
                android:id="@+id/cardGroupEdit_btn"
                android:layout_width="@dimen/img_icon_big"
                android:layout_height="@dimen/img_icon_big"
                android:padding="@dimen/padding_tiny"
                android:src="@drawable/ftc_round_edit_128"
                android:layout_gravity="end"
                />
            
        </FrameLayout>

        <ImageView
            style="@style/Theme.Tegao.Divider.Horizontal"
            android:id="@+id/lo_hDivider_img"
            app:layout_constraintTop_toBottomOf="@id/lo_cardGroupListHeaderBar_frm"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            style="@style/Theme.Tegao.ScrollableViewFadeEdge"
            android:id="@+id/cardGroupList_rcy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/lo_hDivider_img"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:listitem="@layout/item_learning_card_group"
            tools:itemCount="4"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>