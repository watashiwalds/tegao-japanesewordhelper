<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="headerBarInfo"
            type="com.tegaoteam.application.tegao.ui.component.generics.HeaderBarInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/Theme.Tegao.Label.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{headerBarInfo.label}"

            tools:text="Tiêu đề của màn hình (~30-40 char)" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="@dimen/img_headerBackButton"
            android:layout_height="@dimen/img_headerBackButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ftc_round_arrow_left_128"
            android:scaleType="fitCenter"
            app:tint="@color/text_normal"
            android:background="?android:selectableItemBackground"
            android:padding="24dp"
            app:toggleVisibility="@{headerBarInfo.backOnClickListener != null}"
            android:onClick="@{() -> headerBarInfo.backOnClickListener.invoke()}"
            />

        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="@dimen/img_headerBackButton"
            android:layout_height="@dimen/img_headerBackButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ftc_round_x_128"
            android:scaleType="fitCenter"
            app:tint="@color/text_normal"
            android:background="?android:selectableItemBackground"
            android:padding="25dp"
            app:toggleVisibility="@{headerBarInfo.closeOnClickListener != null}"
            android:onClick="@{() -> headerBarInfo.closeOnClickListener.invoke()}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
