<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dataInfo"
            type="com.tegaoteam.application.tegao.ui.learning.cardlearn.model.ReviewHistoryInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/neutral_stroke_background"
        android:paddingHorizontal="@dimen/padding_normal"
        android:paddingVertical="@dimen/padding_small"
        android:layout_marginBottom="@dimen/padding_small"
        >

        <TextView
            style="@style/Theme.Tegao.Label.Normal"
            android:id="@+id/label_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/lo_sideInfo_lnr"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{dataInfo.label}"

            tools:text="Label here"
            />

        <TextView
            style="@style/Theme.Tegao.ContentText.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_txt"
            app:layout_constraintEnd_toStartOf="@+id/lo_sideInfo_lnr"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@{dataInfo.quickInfo}"

            tools:text="The condensed infomations\nthat you want to show the user with\nto aid them with coordinating the list\nwhich should not be too long"
            />

        <LinearLayout
            android:id="@+id/lo_sideInfo_lnr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/padding_small"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/Theme.Tegao.ContentText.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{String.format("%dd", dataInfo.dueIn)}'
                tools:text="12d"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>