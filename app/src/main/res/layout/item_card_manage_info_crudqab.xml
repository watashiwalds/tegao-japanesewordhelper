<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dataInfo"
            type="com.tegaoteam.application.tegao.ui.homescreen.learning.LearningInfoDataClasses.QuickCrudItemInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/neutral_stroke_background"
        android:paddingHorizontal="@dimen/padding_normal"
        android:paddingVertical="@dimen/padding_small"
        android:layout_marginBottom="@dimen/padding_small"
        android:onClick="@{() -> dataInfo.onItemClickListener.invoke(dataInfo.id)}"
        android:clickable="@{dataInfo.onItemClickListener != null}"
        >

        <TextView
            style="@style/Theme.Tegao.Label.Normal"
            android:id="@+id/label_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/lo_crudQab_lnr"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{dataInfo.label}"

            tools:text="Label here"
            />

        <TextView
            style="@style/Theme.Tegao.ContentText.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_txt"
            app:layout_constraintEnd_toStartOf="@+id/lo_crudQab_lnr"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="@{dataInfo.quickInfo}"

            tools:text="The condensed infomations\nthat you want to show the user with\nto aid them with coordinating the list\nwhich should not be too long"
            />

        <LinearLayout
            android:id="@+id/lo_crudQab_lnr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

            <ImageButton
                style="@style/Theme.Tegao.ImageIcon.Label"
                android:foreground="?android:selectableItemBackground"
                android:layout_width="@dimen/img_icon_big"
                android:layout_height="@dimen/img_icon_big"
                android:padding="@dimen/padding_tiny"
                android:src="@drawable/ftc_round_pen_128"
                app:toggleVisibility="@{dataInfo.onEditQabClickListener != null}"
                android:onClick="@{() -> dataInfo.onEditQabClickListener.invoke(dataInfo.id)}"
                android:layout_marginBottom="@dimen/padding_small"
                />
            <ImageButton
                style="@style/Theme.Tegao.ImageIcon.Label"
                android:foreground="?android:selectableItemBackground"
                android:layout_width="@dimen/img_icon_big"
                android:layout_height="@dimen/img_icon_big"
                android:padding="@dimen/padding_tiny"
                android:src="@drawable/ftc_round_trash_128"
                app:toggleVisibility="@{dataInfo.onDeleteQabClickListener != null}"
                android:onClick="@{() -> dataInfo.onDeleteQabClickListener.invoke(dataInfo.id)}"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>