<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="expandable"
            type="Boolean" />
        <variable
            name="isExpanding"
            type="androidx.lifecycle.LiveData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/lo_index_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_nano"
            style="@style/Theme.Tegao.ContentText.TitleSecondary"
            app:layout_constraintTop_toTopOf="@id/lo_definition_tags_rcy"
            app:layout_constraintStart_toStartOf="parent"

            tools:text="1."
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lo_definition_tags_rcy"
            android:paddingStart="@dimen/padding_tiny"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lo_index_txt"
            app:layout_constraintTop_toTopOf="parent"

            tools:itemCount="3"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_tag"
            tools:orientation="horizontal" />

        <TextView
            android:id="@+id/definition"
            style="@style/Theme.Tegao.ContentText.Normal"
            android:paddingStart="@dimen/padding_tiny"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_nano"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/lo_definition_tags_rcy"
            app:layout_constraintTop_toBottomOf="@id/lo_definition_tags_rcy"

            tools:text="vòi phun nước hình miệng rồng (thường thấy ở bồn rửa tay ở các đền, chùa)" />

        <ImageView
            android:layout_width="@dimen/textSize_small"
            android:layout_height="@dimen/textSize_small"
            android:theme="@style/Theme.Tegao.ImageIcon.Neutral"
            app:layout_constraintTop_toBottomOf="@id/lo_index_txt"
            app:layout_constraintStart_toStartOf="@id/lo_index_txt"
            android:src="@drawable/ftc_bold_trig_down_128"
            app:toggleVisibility="@{expandable}"
            />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lo_definition_expand_infos_rcy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_nano"
            app:layout_constraintTop_toBottomOf="@id/definition"
            app:layout_constraintStart_toStartOf="@id/definition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            app:toggleVisibility="@{expandable}"

            tools:itemCount="2"
            tools:listitem="@layout/item_definition_expansion"
            />

        <FrameLayout
            android:id="@+id/lo_clickFrame_frm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            tools:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>