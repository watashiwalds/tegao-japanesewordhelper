<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="expandable"
            type="Boolean" />
        <variable
            name="isExpanding"
            type="androidx.lifecycle.LiveData&lt;Boolean&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lo_definition_cst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/lo_index_txt"
            android:textAlignment="center"
            android:layout_width="@dimen/padding_large"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_nano"
            style="@style/Theme.Tegao.ContentText.TitleSecondary"
            app:layout_constraintTop_toTopOf="@id/lo_definition_tags_rcy"
            app:layout_constraintStart_toStartOf="parent"

            tools:text="99"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lo_definition_tags_rcy"
            android:paddingStart="@dimen/padding_tiny"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lo_index_txt"
            app:layout_constraintTop_toTopOf="parent"

            tools:itemCount="3"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_tag"
            tools:orientation="horizontal" />

        <TextView
            android:id="@+id/definition"
            style="@style/Theme.Tegao.ContentText.Normal"
            android:paddingStart="@dimen/padding_tiny"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/padding_nano"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/lo_definition_tags_rcy"
            app:layout_constraintTop_toBottomOf="@id/lo_definition_tags_rcy"
            android:textIsSelectable="true"

            tools:text="vòi phun nước hình miệng rồng (thường thấy ở bồn rửa tay ở các đền, chùa)" />

        <ImageView
            android:id="@+id/expand_definition_img"
            android:layout_width="@dimen/padding_large"
            android:layout_height="@dimen/padding_normal"
            style="@style/Theme.Tegao.ImageIcon.Neutral"
            app:layout_constraintTop_toBottomOf="@id/lo_index_txt"
            app:layout_constraintStart_toStartOf="@id/lo_index_txt"
            android:src="@drawable/ftc_bold_trig_down_128"

            app:toggleVisibility="@{expandable}"
            app:toggleVisibility2ndGateLiveDataReverse="@{isExpanding}"
            />

        <ImageView
            android:id="@+id/collapse_definition_img"
            android:layout_width="@dimen/padding_large"
            android:layout_height="@dimen/padding_normal"
            style="@style/Theme.Tegao.ImageIcon.Neutral"
            android:layout_marginBottom="@dimen/padding_nano"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/lo_index_txt"
            android:src="@drawable/ftc_bold_trig_up_128"

            app:toggleVisibility="@{expandable}"
            app:toggleVisibility2ndGateLiveData="@{isExpanding}"
            />

        <ImageView
            android:id="@+id/lo_expand_click_padding_img"
            android:layout_width="@dimen/padding_large"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/expand_definition_img"
            app:layout_constraintBottom_toTopOf="@id/collapse_definition_img"
            app:layout_constraintStart_toStartOf="@id/lo_index_txt"
            android:src="@drawable/neutral_stroke_start"
            android:paddingStart="12dp"

            app:toggleVisibility="@{expandable}"
            app:toggleVisibility2ndGateLiveData="@{isExpanding}"
            />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lo_definition_expand_infos_rcy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_nano"
            app:layout_constraintTop_toBottomOf="@id/definition"
            app:layout_constraintStart_toStartOf="@id/definition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"

            app:toggleVisibility="@{expandable}"
            app:toggleVisibility2ndGateLiveData="@{isExpanding}"

            tools:itemCount="2"
            tools:listitem="@layout/item_definition_additional_info"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>