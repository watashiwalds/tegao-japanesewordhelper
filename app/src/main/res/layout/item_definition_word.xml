<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_small">

        <TextView
            android:id="@+id/reading"
            style="@style/Theme.Tegao.ContentText.Large"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/trickMargin_furigana"
            android:clickable="true"
            android:longClickable="true"
            android:textIsSelectable="true"
            app:layout_constraintEnd_toEndOf="@+id/furigana"
            app:layout_constraintEnd_toStartOf="@+id/qab_makeNewCard_btn"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/furigana"
            tools:text="竜の口" />

        <TextView
            android:id="@+id/furigana"
            style="@style/Theme.Tegao.ContentText.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            app:layout_constraintEnd_toStartOf="@+id/qab_makeNewCard_btn"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            tools:text="たつのくち, りゅうのくち" />

        <TextView
            android:id="@+id/additionalInfo"
            style="@style/Theme.Tegao.ContentText.Small"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_small"
            app:layout_constraintTop_toBottomOf="@id/reading"
            app:layout_constraintStart_toStartOf="parent"

            tools:visibility="visible"
            tools:text="ryu＼–nok(u)／chi‾\nta／tsuno‾k(u)／chi‾"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/lo_word_tags_rcy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/additionalInfo"

            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:orientation="horizontal"
            tools:listitem="@layout/item_tag_classification"
            tools:itemCount="3"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lo_word_definitions_rcy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_tiny"
            android:layout_marginBottom="@dimen/padding_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lo_word_tags_rcy"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"

            tools:itemCount="3"
            tools:listitem="@layout/subitem_definition_single_word" />

        <ImageView
            android:id="@+id/lo_divider_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_tiny"
            android:src="@drawable/neutral_stroke_underline"
            app:layout_constraintTop_toBottomOf="@id/lo_word_definitions_rcy"
            />

        <ImageButton
            android:id="@+id/qab_makeNewCard_btn"
            style="@style/Theme.Tegao.IconButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/neutral_stroke_background"
            android:padding="@dimen/padding_small"
            android:src="@drawable/ftc_round_plus_128"
            android:visibility="gone"

            tools:visibility="visible"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>