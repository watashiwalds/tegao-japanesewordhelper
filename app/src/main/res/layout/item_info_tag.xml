<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="infoTag"
            type="com.tegaoteam.application.tegao.ui.component.infotag.InfoTagItem" />
    </data>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Theme.Tegao.Tag"
        android:text="@{infoTag.label}"
        android:onClick="@{() -> infoTag.onClick()}"

        tools:text="gradient"
        tools:backgroundTint="@color/neutral"
        >
    </TextView>
</layout>
