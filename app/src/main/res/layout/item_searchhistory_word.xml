<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="searchedKeyword"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingBottom="@dimen/padding_tiny">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:minWidth="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_midDecent"
            android:layout_marginStart="@dimen/padding_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/keyword"
            app:layout_constraintStart_toEndOf="@id/keyword"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/neutral_stroke_underline"
            />

        <TextView
            android:id="@+id/keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Theme.Tegao.ContentText.Decent"
            android:singleLine="false"
            android:lineSpacingMultiplier="0.8"
            android:text="@{searchedKeyword}"

            tools:text="ほんとに日本語"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

