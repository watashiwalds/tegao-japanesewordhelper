<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="inputBar"
            type="com.tegaoteam.application.tegao.ui.component.generics.InputBarView" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_inputBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/neutral_stroke_underline">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputField_edt"
            android:paddingVertical="@dimen/padding_large"
            android:paddingStart="@dimen/padding_normal"
            android:inputType="text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:hint="@string/hint_is_an_input_field"
            android:maxLines="1"
            android:textColorHint="@color/neutral"
            android:autofillHints="none"
            app:layout_constraintEnd_toStartOf="@+id/lo_inputClearBtn_frm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="spread"/>

        <FrameLayout
            android:id="@+id/lo_inputClearBtn_frm"
            android:layout_width="0dp"
            android:maxWidth="@dimen/img_icon_big"
            android:minWidth="@dimen/img_icon"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/inputField_edt"
            app:layout_constraintEnd_toStartOf="@id/switch_handwritingMode_icl"
            app:layout_constraintWidth_percent="0.1"
            app:toggleVisibility="@{inputBar.enableClearInput}"
            android:foreground="?android:attr/selectableItemBackground"

            tools:visibility="visible"
            >

            <ImageView
                android:id="@+id/inputClear_btn"
                style="@style/Theme.Tegao.IconImage"
                android:padding="4dp"
                android:src="@drawable/ftc_round_x_128"
                android:layout_gravity="center"
                />
        </FrameLayout>

        <include layout="@layout/view_button_pushswitch_icononly"
            android:id="@+id/switch_handwritingMode_icl"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:maxWidth="@dimen/img_icon_big"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/lo_inputClearBtn_frm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.1"

            app:toggleVisibility="@{inputBar.isHandwritingEnabled}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

