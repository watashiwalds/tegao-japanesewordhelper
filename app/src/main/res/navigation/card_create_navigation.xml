            android:id="@+id/action_cardCreateSetAnswerFragment_to_cardCreateSetBackFragment"
            app:destination="@id/cardCreateSetBackFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardCreateSetBackFragment"
        android:name="com.tegaoteam.application.tegao.ui.learning.cardcreate.fragment.CardCreateSetBackFragment"
        android:label="CardCreateSetBackFragment" >
        <action
            android:id="@+id/action_cardCreateSetBackFragment_to_cardCreateConfirmationFragment"
            app:destination="@id/cardCreateConfirmationFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardCreateConfirmationFragment"
