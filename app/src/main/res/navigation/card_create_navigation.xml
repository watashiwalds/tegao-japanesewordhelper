<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/card_create_navigation"
    app:startDestination="@id/cardCreateSetGroupFragment">

    <fragment
        android:id="@+id/cardCreateSetGroupFragment"
        android:name="com.tegaoteam.application.tegao.ui.learning.cardcreate.fragment.CardCreateSetGroupFragment"
        android:label="CardCreateSetGroupFragment" >
        <action
            android:id="@+id/action_cardCreateSetGroupFragment_to_cardCreateSetTypeFragment"
            app:destination="@id/cardCreateSetTypeFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardCreateSetTypeFragment"
        android:name="com.tegaoteam.application.tegao.ui.learning.cardcreate.fragment.CardCreateSetTypeFragment"
        android:label="CardCreateSetTypeFragment" >
        <action
            android:id="@+id/action_cardCreateSetTypeFragment_to_cardCreateSetFrontFragment"
