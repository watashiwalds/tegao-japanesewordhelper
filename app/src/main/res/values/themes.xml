<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tegao" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="Theme.Tegao" parent="Base.Theme.Tegao" >
        <item name="android:background">@color/background</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Theme.Tegao.Screen">
        <item name="android:padding">@dimen/padding_normal</item>
    </style>

    <style name="Theme.Tegao.ImageButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>
    <style name="Theme.Tegao.ImageButton.HasPadding">
        <item name="android:padding">3dp</item>
    </style>

    <style name="Theme.Tegao.TextButton">
        <item name="backgroundTint">@null</item>
        <item name="iconSize">@dimen/img_icon</item>
    </style>
    <style name="Theme.Tegao.TextButton.Primary">
        <item name="android:background">@drawable/primary_solid_background</item>
        <item name="android:textColor">@color/text_reverse</item>
        <item name="iconTint">@color/text_reverse</item>
    </style>
    <style name="Theme.Tegao.TextButton.Neutral">
        <item name="android:background">@drawable/neutral_stroke_background</item>
        <item name="iconTint">@color/text_normal</item>
    </style>
    <style name="Theme.Tegao.TextButton.Chip">
        <item name="android:background">@drawable/neutral_stroke_underline</item>
        <item name="android:paddingHorizontal">@dimen/padding_small</item>
        <item name="android:paddingVertical">@dimen/padding_small</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconTint">@color/text_normal</item>
    </style>
    <style name="Theme.Tegao.TextButton.Chip.Active">
        <item name="android:background">@drawable/primary_solid_background</item>
        <item name="icon">@drawable/ftc_round_tick_128</item>
        <item name="iconSize">16dp</item>
        <item name="iconTint">@color/text_reverse</item>
        <item name="android:textColor">@color/text_reverse</item>
    </style>

    <style name="Theme.Tegao.Tag">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:background">@drawable/require_tint_solid_background</item>
        <item name="android:paddingHorizontal">@dimen/padding_small</item>
        <item name="android:paddingVertical">@dimen/padding_tiny</item>
        <item name="android:layout_marginEnd">@dimen/padding_tiny</item>
    </style>
</resources>