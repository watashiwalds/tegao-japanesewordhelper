<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tegao" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_reverse</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/const_black</item>

        <item name="android:colorBackground">@color/background_fill</item>
        <item name="colorOnBackground">@color/text_normal</item>
<!--        <item name="colorSurface">@color/const_black</item>-->
<!--        <item name="colorOnSurface">@color/const_black</item>-->
<!--        <item name="colorError">@color/const_black</item>-->
<!--        <item name="colorOnError">@color/const_black</item>-->
    </style>

    <style name="Theme.Tegao" parent="Base.Theme.Tegao" >
        <item name="android:background">@color/background</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="drawableTint">@color/text_normal</item>
    </style>

    <style name="Theme.Tegao.Screen">
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
    </style>

    <style name="Theme.Tegao.ImageButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
        <item name="tint">@color/text_normal</item>
    </style>
    <style name="Theme.Tegao.ImageButton.HasPadding">
        <item name="android:padding">3dp</item>
    </style>
    <style name="Theme.Tegao.ImageButton.HasBigPadding">
        <item name="android:padding">4dp</item>
    </style>

    <style name="Theme.Tegao.TextButton">
        <item name="backgroundTint">@null</item>
        <item name="iconSize">@dimen/img_icon</item>
    </style>
    <style name="Theme.Tegao.TextButton.Primary">
        <item name="android:background">@drawable/primary_solid_background</item>
        <item name="android:textColor">@color/text_reverse</item>
        <item name="iconTint">@color/text_reverse</item>
    </style>
    <style name="Theme.Tegao.TextButton.Neutral">
        <item name="android:background">@drawable/neutral_stroke_background</item>
        <item name="iconTint">@color/text_normal</item>
    </style>
    <style name="Theme.Tegao.TextButton.Chip">
        <item name="android:paddingHorizontal">@dimen/padding_small</item>
        <item name="android:paddingVertical">@dimen/padding_small</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="Theme.Tegao.TextButton.Chip.TextChip">
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:paddingVertical">0dp</item>
    </style>

    <style name="Theme.Tegao.Tag">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:background">@drawable/require_tint_solid_background</item>
        <item name="android:paddingHorizontal">@dimen/padding_tiny</item>
        <item name="android:paddingVertical">@dimen/padding_tiny</item>
    </style>

    <style name="Theme.Tegao.ContentText"/>
    <style name="Theme.Tegao.ContentText.Small">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>
    <style name="Theme.Tegao.ContentText.Large">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textSize_large</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">0.8</item>
    </style>
    <style name="Theme.Tegao.ContentText.Normal">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
    </style>
    <style name="Theme.Tegao.ContentText.Decent">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textSize_decent</item>
    </style>
    <style name="Theme.Tegao.ContentText.TitleSecondary">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:textColor">@color/neutral</item>
    </style>

    <style name="Theme.Tegao.ImageIcon"/>
    <style name="Theme.Tegao.ImageIcon.Neutral">
        <item name="tint">@color/neutral</item>
    </style>

    <style name="Theme.Tegao.RemoveDefaultTextPad">
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">0.8</item>
    </style>
</resources>